!!!
%html
  %head
    %title= content_for?(:title) ? "#{yield(:title)} | FabLabs" : "FabLabs"
    %meta{ name: "viewport", content: "width=device-width" }
    = stylesheet_link_tag "//fonts.googleapis.com/css?family=Montserrat"
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "sessions", "data-turbolinks-track" => true
    = csrf_meta_tags
    :css
      body {
        background-image: url('#{image_path("//i.imgur.com/KNJwy2W.jpg")}');
      }
  %body.sessions{ class: body_classes }
    .fade-bg
    #main
      - if flash.any?
        .row
          .columns.large-12
          - flash.each do |name, msg|
            = content_tag :div, msg, class: flash_class(name)
      = yield

    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-46064152-1', 'fablabs.io');
      ga('send', 'pageview');
