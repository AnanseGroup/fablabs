!!!
%html
  %head
    %title= content_for?(:title) ? "#{yield(:title)} | FabLabs" : "FabLabs"
    %meta{ name: "viewport", content: "width=device-width" }
    = javascript_include_tag "//maps.googleapis.com/maps/api/js?sensor=false&libraries=places"
    = stylesheet_link_tag    "//cdn.leafletjs.com/leaflet-0.6.4/leaflet.css", "http://fonts.googleapis.com/css?family=Montserrat|Roboto+Slab:400,700"
    = javascript_include_tag "//cdn.leafletjs.com/leaflet-0.6.4/leaflet.js"
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = javascript_include_tag "//api.filepicker.io/v1/filepicker.js"
    = csrf_meta_tags

  %body{ class: body_classes }
    = render "application/header"
    .container#main
      - if flash.any?
        .row
          .col-md-12
          - flash.each do |name, msg|
            = content_tag :div, msg, class: flash_class(name)
    = yield

    %footer
      .container
        .row
          .col-xs-3.col-md-2
            = image_tag "footer-logo.png"
          .col-xs-9.col-md-10
            %ul
              %li= link_to "Labs List", labs_path
              %li= link_to "World Map", map_labs_path
              %li= link_to "About", about_path
              %li= link_to "The Fab Foundation", "http://www.fabfoundation.org"