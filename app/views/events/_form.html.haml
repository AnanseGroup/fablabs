= simple_form_for [@lab,@event] do |f|
  = render 'form_errors', resource: @event
  %fieldset
    = f.input :name, placeholder: "New Event"
    .row
      .col-lg-2
        = f.input :start_date, as: 'string', input_html: { placeholder: 'yyyy-mm-dd', class: 'datepicker', data: { date_format: 'yyy-mm-dd' }}
      .col-lg-2
        = f.input :start_time, as: 'string', input_html: { class: 'timepicker' }
      .col-lg-1
        to
      .col-lg-2
        = f.input :end_date, as: 'string', input_html: { placeholder: 'yyyy-mm-dd', class: 'datepicker', data: { date_format: 'yyyy-mm-dd' }}
      .col-lg-2
        = f.input :end_time, as: 'string', input_html: { class: 'timepicker' }
      .col-lg-3
        = f.input :time_zone, as: :time_zone

    = f.input :all_day, as: 'boolean'

  %fieldset
    = f.input :tags, as: 'check_boxes', collection: Event::Tags, checked: @event.tags
    = f.input :location
    = f.input :description

  = f.submit class: 'btn btn-success'
