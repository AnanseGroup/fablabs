- title "Sign in"

= form_tag sessions_path do
  = hidden_field_tag :goto, params[:goto]
  .field
    = label_tag :email
    = text_field_tag :email, params[:email], placeholder: 'Email', autofocus: true, autocapitalize: "off", autocorrect: "off"
  .field
    = label_tag :password
    = password_field_tag :password, nil, placeholder: 'Password'
  .actions= submit_tag "Sign in", class: 'button'
