.row
  .columns.large-12= title "Edit Your Settings"
  .columns.large-12
    = simple_form_for @user do |f|
      %fieldset
        = render "form_errors", resource: @user
        .row
          .columns.large-1
            = f.label :first_name, "Name"
          .columns.large-3
            = f.input :first_name, label: false, placeholder: 'First'
          .columns.large-3.left
            = f.input :last_name, label: false, placeholder: 'Last'

        = f.input :email
        = f.input :phone

      %fieldset
        .row
          .columns.large-2= image_tag @user.avatar, class: 'avatar big'
          .columns.large-10= f.input :avatar_src, input_html: { class: 'fp' }, label: 'Avatar'

      %fieldset
        = f.input :use_metric, :collection => [[true, 'Metric - cm/m/km'], [false, 'Imperial - in/ft/mi']], :label_method => :last, :value_method => :first, :as => :radio_buttons, :label => "Preferred units"

      = f.submit "Update", class: 'button'
