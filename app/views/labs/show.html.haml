#header-bg.hidden-xs{style: "background-image: url('#{@lab.header_image_src}');"}
.row
  .columns.large-8
    = render "breadcrumbs", lab: @lab
    = render "bio", lab: @lab
    = render "action_buttons", lab: @lab
    .lab-description= simple_format @lab.description
    %ul.lab-links
      - @lab.links.each do |link|
        %li= link_to link.url, link.url

    = render "people", people: @people

  .columns.large-4.sidebar
    = render "minimap", lab: @lab
    = render "nearby", lab: @lab, nearby_labs: @nearby_labs
    = render "facilities", lab: @lab
