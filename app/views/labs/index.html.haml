- title "Labs"

.row.top
  .columns.large-8
    %ul.breadcrumbs
      %li= link_to Lab.to_s.pluralize, labs_path
      - if params[:country].present?
        %li.current
          = link_to labs_path(country: params[:country]) do
            %span.flag{class: "flag-#{params[:country]}"}
            = Country[params[:country]]
      - else
        %li.current= link_to "All Countries", labs_path
  .columns.large-4
    = render "header"

.row
  .columns.large-8.content
    .row
      .columns.large-12
        %dl.sub-nav.right.order-by
          %dt Order by:
          %dd= select_tag :order, ['name','name']

    - if params[:query].present?
      .search-results
        -# %button.close{type: "button", data: { dismiss: "alert"}, aria: { hidden: true}} ×
        = link_to "×", labs_path, class: 'close right'
        #{pluralize @labs.size, "search result"} for
        %strong= params[:query]

    .labs= render @labs
    = paginate @labs

  .columns.large-4.sidebar-offcanvas
    .heading
      Filter by
      %strong Country
    %ul.side-nav.countries-filter
      %li.all{class: ('active' if params[:country].blank?)}
        = link_to url_for(params.merge(country: nil, page: nil)) do
          = I18n.t("labs.index.all_countries", :default => "All Countries")
          %span.count.right= @count

      - @countries.each do |country,country_code,count|
        %li{class: ('active' if params[:country] == country_code)}
          -# %div{class: "flag flag-#{country[1].downcase} pull-left"}
          = link_to url_for(params.merge(country: country_code, page: nil)) do
            = country
            %span.count.right= count

    .heading
      %strong Download
      the Fab Labs list
    %dl.sub-nav
      %dt Format:
      %dd{}= link_to "JSON", "//api.fablabs.dev/1/labs", class: 'button tiny'
    .hint CSV and XLSX (Excel) coming soon.

    .heading
      %strong Expand
      the Network
    - if current_user
      = link_to new_lab_path, class: "button tiny success" do
        = fa_icon "plus", text: I18n.t("labs.index.add_a_lab", default: "Add a Lab")
    - else
      = link_to new_lab_path, class: "button tiny success disabled has-tip", data: { tooltip: true }, title: "You need to be signed in to add a Lab" do
        = fa_icon "plus", text: I18n.t("labs.index.add_a_lab", default: "Add a Lab")
