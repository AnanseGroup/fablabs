- title @project.title

- cache ["v3-project-#{@project.id}-#{I18n.locale}", Project.last_updated_at] do
  .row
    .columns.large-12
      = render "breadcrumbs"
  .row
    .columns.large-8
      .main
        = @project.title
        %h1= @project.title

        = simple_format(@project.description)

    .columns.large-4.side


.row
  .columns.large-12
    - if current_or_null_user.can_update?(@project)
      = link_to "Edit", edit_machine_path(@project), class: 'button'
