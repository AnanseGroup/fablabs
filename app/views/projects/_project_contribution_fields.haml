.row
  .columns.large-4
    %label
      Contributors
    .contributors-container
      .icon
        %span
          = icon('terminal')
    .contributors
      - @project.contributions.each do |c|
        - if c.contributor.present?
          = link_to "x", contribution_path(c), method: :delete
          = image_tag hocho(c.contributor.avatar, "o=t&q=80&d=90x90"), class: 'avatar tiny'

  .columns.large-8
    = select_tag :contributions_attributes, options_from_collection_for_select(@project.contributors, :id, :username), name: "project[contributions_attributes][0][contributor_id]", multiple: true
