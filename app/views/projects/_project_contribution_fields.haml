.row
  .columns.large-6
    %label
      Contributors
    .contributors-container
      .icon
        %span
          = icon('terminal')
    .contributors
      - @project.contributions.each do |c|
        = image_tag hocho(c.contributor.avatar, "o=t&q=80&d=90x90"), class: 'avatar tiny'

  .columns.large-6
    %label
      Search and select
      = select_tag :contributor_id, options_for_select(@user_options.insert(0, ""))
