= simple_form_for project do |f|
  = render "form_errors", resource: project
  .row
    .columns.large-4
      %label
        Owner
      .owner-container
        .icon
          %span
            = icon('code')
        .owner-btn
          = image_tag hocho(@project.owner.avatar, "o=t&q=80&d=90x90"), class: 'avatar tiny'
          = link_to @project.owner do
            %strong= @project.owner.username
    .columns.large-8
      = f.input :title
  = f.input :description
  .row
    .columns.large-6
      = icon('github')
      = f.input :github
      = icon('link')
      = f.input :web
    .columns.large-6
      = icon('dropbox')
      = f.input :dropbox
      = icon('bitbucket')
      = f.input :bitbucket

  = f.submit
