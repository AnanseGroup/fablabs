= simple_form_for project do |f|
  = render "form_errors", resource: project
  .row
    .columns.large-4
      %label
        Owner
      .owner-container
        .icon
          %span
            = icon('code')
        .owner-btn
          = image_tag hocho(@project.owner.avatar, "o=t&q=80&d=90x90"), class: 'avatar tiny'
          = link_to @project.owner do
            %strong= @project.owner.username
    .columns.large-8
      = f.input :title
  = render 'project_contribution_fields', :f => f

  %p
    You can use
    = link_to "Markdown", "http://daringfireball.net/projects/markdown/"
    (MD)
    to style your project description. Please see
    = link_to "MD-basics", "https://help.github.com/articles/markdown-basics/"
    for more info.
  = f.input :description
  .row
    .columns.large-6
      = icon('link')
      = f.input :web
      = icon('github')
      = f.input :github
      = icon('hdd-o')
      = f.input :drive
      = icon('flickr')
      = f.input :flickr
    .columns.large-6
      = icon('dropbox')
      = f.input :dropbox
      = icon('bitbucket')
      = f.input :bitbucket
      = icon('youtube')
      = f.input :youtube
      = icon('vimeo-square')
      = f.input :vimeo

  = f.submit class: 'button'
